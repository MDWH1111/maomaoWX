/* pages/music/music.wxss */
.music{
    height: 200px;
    position:relative;
}
#myAudio{
    width: 100%;
    background:none;
}
.showimg{
    width:100%;
    height:200px;
    position:absolute;
    left:0;
    top:0;
}
.player{
    height:67px;
    position: absolute;
    left:0;
    bottom:0;
    z-index:10;
}
.musicname{
    position:absolute;
    left:20px;
    top:40px; 
    z-index:10;
    color:#EF9B6C;
    font-weight: bold;
    font-size:22px;
}
.author{
    position:absolute;
    left:30px;
    top:90px; 
    z-index:10;
    color:#EF9B6C;
    font-size:16px;
}
.wx-audio-right{
   background:#fff;
   
}
.mdetail{
    overflow: hidden;
    height:55px;
    padding:5px 10px;
    border-bottom:1px solid #dbdbdb;
}
.mdetail image{
    float:left;
    width:55px;
    height:55px;
}
.minfo{
    float:left;
    margin-left:10px;
    padding:10px 0;
    
}
.detailLeft{
    float:left;
}
.detailRight{
    float:right;
}
.mname{
    font-size: 14px;
    margin-bottom:10px;
}
.mauthor{
    font-size: 12px;
    color:#dbdbdb;
}
.music .play{
    width: 40px;
    height: 40px;
    position: absolute;
    bottom: 10px;
    right:10px;
    z-index: 10;
}
.lyc{
    color:#EF9B6C;
    position: absolute;
    left: 20px;
    bottom:10px;
    height: 24px;
    font-size: 14px;
    line-height: 24px;
    text-align: center;
    z-index: 10;
}
